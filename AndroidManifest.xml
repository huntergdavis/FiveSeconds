<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hunterdavis.fiveseconds"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ui.GameSelectScreen"
            android:label="@string/title_activity_game_select_screen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.hunterdavis.gameutils.title.TitleScreen"
            android:label="@string/title_activity_game_select_screen" >
        </activity>
        <activity
            android:name="com.hunterdavis.gameutils.credits.CreditsScreen"
            android:label="@string/title_activity_credits_screen" >
        </activity>
        <activity
            android:name=".games.balloons.popxcolorballoons.PopXColorBalloons"
            android:label="@string/popxcolorbaloons_activity_credits_screen" >
        </activity>
        <activity
            android:name=".games.dotdotdotjump.DotDotDotJump"
            android:hardwareAccelerated="true"
            android:label="@string/dotdotdotjump_activity_credits_screen"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.google.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />
        <!-- Start of Crittercism.com Code -->
        <activity android:name="com.crittercism.NotificationActivity" />
        <!-- End of Crittercism.com Code -->
    </application>

</manifest>